{
  "name": "ng-mlpm",
  "version": "19.0.0",
  "description": "A modern, lightweight UI component library for Angular applications",
  "scripts": {
    "start": "ng serve",
    "build": "pnpm build:lib && pnpm build:app",
    "build:lib": "ng build mlpm",
    "build:app": "ng build mlpm-app",
    "test": "pnpm test:lib && pnpm test:app",
    "test:lib": "ng test mlpm --watch=false --browsers=ChromeHeadless",
    "test:app": "ng test mlpm-app --watch=false --browsers=ChromeHeadless",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "lint": "ng lint",
    "pack:lib": "cd dist/mlpm && pnpm pack",
    "publish:lib": "cd dist/mlpm && pnpm publish --no-git-checks",
    "deploy:gh-pages": "ng build mlpm-app --base-href=\"/ng-mlpm/\"",
    "copy:404": "cp dist/mlpm-app/browser/index.html dist/mlpm-app/browser/404.html",
    "deploy": "pnpm run build:lib && pnpm run deploy:gh-pages && pnpm run copy:404 && npx gh-pages -d dist/mlpm-app/browser",
    "copy:readme": "copyfiles -f README.md projects/mlpm/"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.10",
    "@angular/cli": "^19.2.11",
    "@angular/compiler-cli": "^19.2.0",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "19.3.0",
    "copyfiles": "2.4.1",
    "eslint": "^9.23.0",
    "gh-pages": "6.3.0",
    "husky": "9.1.7",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^19.2.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "8.27.0"
  }
}
