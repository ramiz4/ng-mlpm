{
  "name": "ng-mlpm",
  "version": "21.0.0",
  "description": "A modern, lightweight UI component library for Angular applications",
  "scripts": {
    "start": "ng serve",
    "build": "pnpm build:lib && pnpm build:app",
    "build:lib": "ng build mlpm",
    "build:app": "ng build mlpm-app",
    "test": "pnpm test:lib && pnpm test:app",
    "test:lib": "ng test mlpm --watch=false --browsers=ChromeHeadless",
    "test:app": "ng test mlpm-app --watch=false --browsers=ChromeHeadless",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "lint": "ng lint",
    "pack:lib": "cd dist/mlpm && pnpm pack",
    "publish:lib": "cd dist/mlpm && pnpm publish --no-git-checks",
    "deploy:gh-pages": "ng build mlpm-app --base-href=\"/ng-mlpm/\"",
    "copy:404": "cp dist/mlpm-app/browser/index.html dist/mlpm-app/browser/404.html",
    "deploy": "pnpm run build:lib && pnpm run deploy:gh-pages && pnpm run copy:404 && npx gh-pages -d dist/mlpm-app/browser",
    "copy:readme": "copyfiles -f README.md projects/mlpm/",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,html,css,scss,json,md}\""
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.0.6",
    "@angular/compiler": "^21.0.6",
    "@angular/core": "^21.0.6",
    "@angular/forms": "^21.0.6",
    "@angular/platform-browser": "^21.0.6",
    "@angular/platform-browser-dynamic": "^21.0.6",
    "@angular/router": "^21.0.6",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.6",
    "@commitlint/cli": "20.3.0",
    "@commitlint/config-conventional": "20.3.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "@types/jasmine": "~5.1.13",
    "angular-eslint": "21.1.0",
    "copyfiles": "2.4.1",
    "eslint": "^9.28.0",
    "gh-pages": "6.3.0",
    "husky": "9.1.7",
    "jasmine-core": "~5.13.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^21.0.1",
    "prettier": "3.7.4",
    "semantic-release": "25.0.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.33.1"
  }
}
