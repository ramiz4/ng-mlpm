{
  "name": "ng-mlpm",
  "version": "21.0.0",
  "description": "A modern, lightweight UI component library for Angular applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/ramiz4/ng-mlpm.git"
  },
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "start": "pnpm storybook",
    "build": "pnpm build:lib",
    "build:lib": "ng build mlpm",
    "test": "pnpm test:lib",
    "test:lib": "ng test mlpm --watch=false --browsers=ChromeHeadless",
    "test:ci": "ng test mlpm --watch=false --browsers=ChromeHeadless --code-coverage",
    "lint": "ng lint",
    "pack:lib": "cd dist/mlpm && pnpm pack",
    "publish:lib": "cd dist/mlpm && pnpm publish --no-git-checks",
    "copy:readme": "copyfiles -f README.md projects/mlpm/",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,html,css,scss,json,md}\"",
    "storybook": "ng run mlpm:storybook",
    "build-storybook": "ng run mlpm:build-storybook"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.0.6",
    "@angular/compiler": "^21.0.6",
    "@angular/core": "^21.0.6",
    "@angular/forms": "^21.0.6",
    "@angular/platform-browser": "^21.0.6",
    "@angular/platform-browser-dynamic": "^21.0.6",
    "@angular/router": "^21.0.6",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.2101.0",
    "@angular-devkit/build-angular": "^21.1.0",
    "@angular-devkit/core": "^21.0.5",
    "@angular/build": "^21.1.0",
    "@angular/cli": "^21.1.0",
    "@angular/compiler-cli": "^21.0.6",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@compodoc/compodoc": "^1.2.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-onboarding": "^10.1.11",
    "@storybook/angular": "^10.1.11",
    "@storybook/test": "8.6.15",
    "@types/jasmine": "~6.0.0",
    "@types/node": "25.0.9",
    "angular-eslint": "21.1.0",
    "copyfiles": "2.4.1",
    "eslint": "^9.28.0",
    "eslint-plugin-storybook": "^10.1.11",
    "gh-pages": "6.3.0",
    "husky": "9.1.7",
    "jasmine-core": "~5.13.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^21.1.0",
    "prettier": "3.8.0",
    "semantic-release": "25.0.2",
    "storybook": "^10.1.11",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
